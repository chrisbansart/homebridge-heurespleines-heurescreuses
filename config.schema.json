{
  "pluginAlias": "HPHCPlatform",
  "pluginType": "platform",
  "singular": true,
  "headerDisplay": "Configurez vos Heures pleines et Heures creuses.",
  "footerDisplay": "Created by @chrisbansart",
  "schema": {
    "type": "object",
    "required": ["name", "slot1Start", "slot1End", "slot2Start", "slot2End"],
    "properties": {
      "name": {
        "title": "Nom",
        "type": "string",
        "default": "Heures Pleines / Heures Creuses (HP/HC)"
      },
      "slot1Start": {
        "title": "Heures creuses - créneau 1 - début",
        "type": "string",
        "pattern": "^([0-1][0-9]|2[0-3]):[0-5][0-9]$",
        "default": "02:00",
        "placeholder": "HH:MM",
        "description": "Heure de début du premier créneau d'heures creuses (format HH:MM)"
      },
      "slot1End": {
        "title": "Heures creuses - créneau 1 - fin",
        "type": "string",
        "pattern": "^([0-1][0-9]|2[0-3]):[0-5][0-9]$",
        "default": "07:00",
        "placeholder": "HH:MM",
        "description": "Heure de fin du premier créneau d'heures creuses (format HH:MM)"
      },
      "slot2Start": {
        "title": "Heures creuses - créneau 2 - début",
        "type": "string",
        "pattern": "^([0-1][0-9]|2[0-3]):[0-5][0-9]$",
        "default": "00:00",
        "placeholder": "HH:MM",
        "description": "Heure de début du deuxième créneau d'heures creuses (format HH:MM). Utiliser 00:00 pour désactiver ce créneau"
      },
      "slot2End": {
        "title": "Heures creuses - créneau 2 - fin",
        "type": "string",
        "pattern": "^([0-1][0-9]|2[0-3]):[0-5][0-9]$",
        "default": "00:00",
        "placeholder": "HH:MM",
        "description": "Heure de fin du deuxième créneau d'heures creuses (format HH:MM). Utiliser 00:00 pour désactiver ce créneau"
      },
      "hpName": {
        "title": "Nom de l'accessoire Heures Pleines",
        "type": "string",
        "default": "Heures Pleines",
        "description": "Nom personnalisé pour l'accessoire Heures Pleines"
      },
      "hcName": {
        "title": "Nom de l'accessoire Heures Creuses",
        "type": "string",
        "default": "Heures Creuses",
        "description": "Nom personnalisé pour l'accessoire Heures Creuses"
      }
    }
  },
  "layout": [
    {
      "type": "section",
      "title": "Heures Creuses - Créneau 1",
      "expandable": true,
      "expanded": true,
      "items": [
        {
          "type": "flex",
          "flex-flow": "row wrap",
          "items": [
            {
              "key": "slot1Start",
              "flex": "1 1 50%"
            },
            {
              "key": "slot1End",
              "flex": "1 1 50%"
            }
          ]
        }
      ]
    },
    {
      "type": "section",
      "title": "Heures Creuses - Créneau 2",
      "expandable": true,
      "expanded": false,
      "items": [
        {
          "type": "flex",
          "flex-flow": "row wrap",
          "items": [
            {
              "key": "slot2Start",
              "flex": "1 1 50%"
            },
            {
              "key": "slot2End",
              "flex": "1 1 50%"
            }
          ]
        }
      ]
    },
    {
      "type": "section",
      "title": "Noms personnalisés des accessoires",
      "expandable": true,
      "expanded": false,
      "items": ["hcName", "hpName"]
    }
  ]
}
